{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    ["@semantic-release/changelog", { "changelogFile": "NEWS.md" }],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "sh -e scripts/semantic-release.sh ${nextRelease.version}"
      }
    ],
    ["@semantic-release/npm", { "npmPublish": false }],
    ["@semantic-release/github", { "assets": ["*.tar.gz"] }],
    [
      "@semantic-release/git",
      {
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}",
        "assets": [
          "inst/CITATION",
          "CITATION.cff",
          "DESCRIPTION",
          "LICENSE",
          "LICENSE.md",
          "NEWS.md",
          "package-lock.json",
          "package.json"
        ]
      }
    ]
  ]
}
